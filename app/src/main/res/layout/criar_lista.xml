<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <EditText
        android:id="@+id/editTextNomeLista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome da Lista"
        android:inputType="text" />

    <Button
        android:id="@+id/buttonAdicionarImagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar Imagem" />

    <ImageView
        android:id="@+id/imageViewPreview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:visibility="gone"
        android:scaleType="centerCrop" />

    <Button
        android:id="@+id/buttonCriarLista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Criar Lista"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="#2E972B"
        android:layout_marginTop="20dp" />

</LinearLayout>
